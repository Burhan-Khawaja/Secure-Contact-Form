doctype html
html
  head
    script(src = "../javascripts/geocoding.js" )
    script(src = "https://unpkg.com/axios/dist/axios.min.js")
    
    //bootstrap and my custom cs
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous")
    link(rel='stylesheet', href='/stylesheets/style.css')
    title Submit Contact Information
  body
    .container 
        .card.text-white.bg-dark
            .card-header.text-center
                h1 Enter Contact Information
            .card-body.text-center 
                form(action='submit' method='POST' id="myForm")
                    .row
                        .col-4.col-md-2
                            select.btn.btn-secondary.bg-white.text-secondary#selectBox(name = 'prefix' )
                                optgroup(label="Prefix")
                                option#Mr(type='radio' name='prefix' value='Mr' checked='') Mr
                                option#Mrs(type='radio' name='prefix' value='Mrs') Mrs
                                option#Ms(type='radio' name='prefix' value='Ms') Ms
                                option#Dr(type='radio' name='prefix' value='Dr') Dr
                        .col
                            input.form-control#first(type='text' name='first' placeholder="First Name")
                        .col
                            input.form-control#last(type='text' name='last' placeholder="Last Name")
                    .row
                        .col
                            input.form-control#street(type='text' name='street' placeholder="Street Name")
                        .col    
                            input.form-control#city(type='text' name='city' placeholder="City Name")
                        .col
                            input.form-control#state(type = 'text' name='state' placeholder="State")
                        .col
                            input.form-control#zip(type='text' name='zip' placeholder="Zip Code")
                    .row
                        .col
                            input.form-control#phone(type='text' name='phone' placeholder="Phone Number")
                        .col
                            input.form-control#email(type='email' name='email' placeholder="Email Address")
                        .col.form-check 
                           
                            label How may we contact you?
                            <br/>
                            input#phoneContact(type='checkbox' name='phoneContact')
                            label(for='phoneContact') Phone
                            
                            input#mailContact(type='checkbox' name='mailContact')
                            label(for='mailContact') Mail
                            
                            input#emailContact(type='checkbox' name='emailContact')
                            label(for='emailContact') Email
                        
                            input#anyContact(type='checkbox' name='anyContact' checked='')
                            label(for='anyContact') Any
                    div <!-- These input tags will be hidden from the user, and are used to store the longitude and latitude once we perform geocoding in javascript-->
                        input#long(type='number' name='longitude' hidden)
                        input#lat(type='number' name= 'latitude' hidden) 
                    button.btn.btn-secondary(type='button' onclick = 'addLocation()' )  Submit Contact Information
                    p
                    a.btn.btn-secondary(href='contacts')  View Contact List
